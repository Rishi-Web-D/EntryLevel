<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/allUsers.css" />
  </head>
  <body>
    <nav>
      <p><a href="/">Home</a></p>
      <p><a href="/createUser">Create user</a></p>
      <p><a href="/allUsers">All user</a></p>
      <p><a href="/exportUsers">Export users</a></p>
    </nav>
    <div class="table-box">
      <div class="table-row table-head">
        <div class="table-cell">
          <p>User Name</p>
        </div>
        <div class="table-cell">
          <p>User Email</p>
        </div>
        <div class="table-cell">
          <p>User Mobile</p>
        </div>
        <div class="table-cell">
          <p>Manage Task</p>
        </div>
        <div class="table-cell">
          <p>Delete user</p>
        </div>
      </div>
      <% users.forEach((user)=>{ %>
      <div class="table-row">
        <div class="table-cell">
          <p><%=user.name%></p>
        </div>
        <div class="table-cell">
          <p><%=user.email%></p>
        </div>
        <div class="table-cell">
          <p><%=user.mobile%></p>
        </div>
        <div class="table-cell">
          <p><a href="/manageTask/<%= user._id %>">Manage Tasks</a></p>
        </div>
        <div class="table-cell">
          <p><a href="/delete/<%= user._id %>">❌</a></p>
        </div>
      </div>

      <% })%>
    </div>
  </body>
</html>
